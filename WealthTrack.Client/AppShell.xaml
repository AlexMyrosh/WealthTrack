<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WealthTrack.Client.Views"
    x:Class="WealthTrack.Client.AppShell"
    FlyoutBehavior="Disabled">
    
    <ShellContent Route="LoadingPage" ContentTemplate="{DataTemplate views:LoadingPage}" />
    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="SignUpPage" ContentTemplate="{DataTemplate views:SignUpPage}" />
</Shell>