<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:initialConfiguration="clr-namespace:WealthTrack.Client.ViewModels.Onboarding.InitialAccountConfiguration"
             xmlns:clientModels="clr-namespace:WealthTrack.Client.Models.Dto"
             x:Class="WealthTrack.Client.Views.Onboarding.InitialAccountConfiguration.InitialWalletCreationPage"
             x:DataType="initialConfiguration:InitialWalletCreationViewModel"
             BackgroundColor="{DynamicResource ContentPageBackground}">

    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30" Spacing="20">

                <Label Text="Create your wallets"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource TitleColor}" />
                
                <Border StrokeThickness="1"
                        Padding="20"
                        StrokeShape="RoundRectangle 20"
                        Background="{DynamicResource BorderBackground}">

                    <VerticalStackLayout Spacing="10">
                        <Entry Placeholder="Wallet name"
                               Text="{Binding NewWalletName}"
                               FontSize="16"
                               BackgroundColor="{DynamicResource EntryBackground}" />

                        <Entry Placeholder="Initial balance"
                               Keyboard="Numeric"
                               Text="{Binding NewWalletBalance}"
                               FontSize="16"
                               BackgroundColor="{DynamicResource EntryBackground}" />
                        
                            <Picker ItemsSource="{Binding Currencies}"
                                    SelectedItem="{Binding SelectedCurrency}"
                                    Title="Select currency"
                                    ItemDisplayBinding="{Binding .}" 
                                    FontSize="16"
                                    BackgroundColor="{DynamicResource PickerBackground}"
                                    TextColor="{DynamicResource PickerTextColor}" />

                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Label Text="Include in total balance"
                                   VerticalOptions="Center"
                                   TextColor="{DynamicResource LabelTextColor}" />
                            <Switch IsToggled="{Binding IsPartOfGeneralBalance}"
                                    OnColor="{DynamicResource AccentColor}" />
                        </HorizontalStackLayout>

                        <Button Text="Add wallet"
                                Command="{Binding AddWalletCommand}"
                                BackgroundColor="{DynamicResource ButtonBackground}"
                                TextColor="{DynamicResource ButtonTextColor}"
                                CornerRadius="8"
                                HeightRequest="45" />
                    </VerticalStackLayout>
                </Border>
                
                <CollectionView ItemsSource="{Binding Wallets}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="clientModels:WalletDto">
                            <Border StrokeThickness="1"
                                    Padding="10"
                                    Margin="0,5"
                                    Background="{DynamicResource BorderBackground}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Текст кошелька -->
                                    <Label Grid.Column="0"
                                           Text="{Binding .}"
                                           FontSize="16"
                                           TextColor="{DynamicResource LabelTextColor}"
                                           VerticalOptions="Center" />

                                    <!-- Крестик -->
                                    <Button Grid.Column="1"
                                            Text="✕"
                                            FontSize="16"
                                            BackgroundColor="Transparent"
                                            TextColor="{DynamicResource DeleteEntityIconColor}"
                                            VerticalOptions="Center"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type initialConfiguration:InitialWalletCreationViewModel}}, Path=DeleteWalletCommand}"
                                            CommandParameter="{Binding Id}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        
        <Button Grid.Row="1"
                Text="{Binding CompleteButtonText}"
                Command="{Binding CompleteCommand}"
                BackgroundColor="{DynamicResource ButtonBackground}"
                TextColor="{DynamicResource ButtonTextColor}"
                CornerRadius="8"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="50"
                Margin="20" />
    </Grid>
</ContentPage>